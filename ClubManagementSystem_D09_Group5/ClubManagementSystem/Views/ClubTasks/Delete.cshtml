@model BussinessObjects.Models.ClubTask
@{
    Layout = null;
}

<div class="modal-header bg-danger text-white">
    <h5 class="modal-title fw-bold"><i class="bi bi-exclamation-triangle me-2"></i> Confirm Deletion</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <p class="text-danger fw-bold">Are you sure you want to delete this task?</p>

    <div class="border rounded p-3 shadow-sm bg-light">
        <dl class="row">
            <dt class="col-sm-4 fw-bold">Task:</dt>
            <dd class="col-sm-8">@Model.TaskDescription</dd>

            <dt class="col-sm-4 fw-bold">Status:</dt>
            <dd class="col-sm-8">@Model.Status</dd>

            <dt class="col-sm-4 fw-bold">Due Date:</dt>
            <dd class="col-sm-8">@(Model.DueDate?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</dd>

            <dt class="col-sm-4 fw-bold">Event:</dt>
            <dd class="col-sm-8">@Model.Event?.EventTitle</dd>
        </dl>
    </div>
</div>

<div class="modal-footer">
    <form asp-action="DeleteConfirmed" asp-controller="ClubTasks" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.TaskId" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash3"></i> Delete
        </button>
    </form>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="bi bi-x-circle"></i> Cancel
    </button>
</div>
