@model BussinessObjects.Models.Event

@{
    Layout = null;
    ViewData["Title"] = "Edit Event";
}

<div class="container p-3">
    <h4 class="mb-3 text-primary">Edit Event</h4>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
        <input type="hidden" asp-for="EventId" />

        <div class="mb-3">
            <label asp-for="EventTitle" class="form-label fw-bold">Title</label>
            <input asp-for="EventTitle" class="form-control" placeholder="Enter event title" />
            <span asp-validation-for="EventTitle" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EventDescription" class="form-label fw-bold">Description</label>
            <textarea asp-for="EventDescription" class="form-control" rows="3" placeholder="Enter event description"></textarea>
            <span asp-validation-for="EventDescription" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EventDate" class="form-label fw-bold">Event Date</label>
            <input asp-for="EventDate" type="datetime-local" class="form-control" id="eventDateInput" />
            <span asp-validation-for="EventDate" class="text-danger"></span>
        </div>

        <div class="text-end">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
