@model BussinessObjects.Models.Dtos.PostDetailsDto

@{
    ViewData["Title"] = "Details";
    var userId = int.Parse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "0");
}
<link rel="stylesheet" href="~/css/post-details.css">


<section class="single-block-wrapper section-padding">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                <div class="single-post">
                    <div class="post-header mb-5 text-center">
                        <div class="meta-cat">
                            <a class="post-category font-extra text-color text-uppercase font-sm letter-spacing-1"
                               href="#">@Model.Club.ClubName</a>
                            
                        </div>
                        <h2 class="post-title mt-2">
                            @Model.Title
                        </h2>

                        <div class="post-meta">
                            <span class="text-uppercase font-sm letter-spacing-1 mr-3">by @Model.User.Username</span>
                            <span class="text-uppercase font-sm letter-spacing-1">@Model.CreatedAt</span>
                        </div>

                        @if (Model.User.UserId == userId)
                        {
                            <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editPostModal">
                                <i class="fa fa-edit"></i> Update Post
                            </button>

                            <form asp-action="Delete" asp-controller="Posts" method="post" class="d-inline">
                                <input type="hidden" name="postId" value="@Model.PostId" />
                                <input type="hidden" name="clubId" value="@Model.Club.ClubId" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this post?');">
                                    <i class="fa fa-trash"></i> Delete Post
                                </button>
                            </form>
                        }

                        <!-- Modal for Editing Post -->
                        <div class="modal fade" id="editPostModal" tabindex="-1" aria-labelledby="editPostModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="editPostModalLabel">Edit Post</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <form asp-action="Edit" asp-controller="Posts" id="editPostForm" method="post" enctype="multipart/form-data">
                                        <input type="hidden" name="PostId" value="@Model.PostId" />

                                        <div class="modal-body">
                                            <!-- Post Title -->
                                            <textarea id="editPostTitle" name="Title" class="w-100 p-2 rounded border"
                                                      rows="2" required maxlength="100">@Model.Title</textarea>

                                            <!-- Post Content -->
                                            <textarea id="editPostContent" name="Content" class="w-100 p-2 rounded border"
                                                      rows="10" required>@Model.Content</textarea>

                                            <!-- Image Upload -->
                                            <div class="mt-3">
                                                <label for="editPostImage" class="form-label">Change Image</label>
                                                <input type="file" class="form-control" id="editPostImage" name="ImageFile"
                                                       accept=".jpg, .jpeg, .png">
                                            </div>

                                            <!-- Image Preview -->
                                            <div id="editImagePreview" class="mt-3 text-center">
                                                <img id="editPreviewImg" src="@Model.ImageBase64" class="img-fluid rounded" alt="Current Image">
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-primary">Save Changes</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>


                        <div class="post-featured-image mt-5">
                            <img src="@Model.ImageBase64" class="img-fluid" alt="featured-image">
                        </div>
                    </div>
                    <div class="post-body">
                        <div class="entry-content">
                            <p>
                               @Model.Content
                            </p>
                        </div>

                        <div class="tags-share-box center-box d-flex justify-content-between border-top border-bottom py-3 text-center">

                            <span class="single-comment-o"><i class="fa fa-comment-o"></i>0 comment</span>

                            <div class="post-share">
                                <span class="count-number-like">2</span>
                                <a class="penci-post-like single-like-button"><i class="ti-heart"></i></a>
                            </div>

                           
                        </div>
                    </div>
                </div>



                @if (Model.RelatedPosts.Any())
                {
                    <div class="related-posts-block mt-5">
                        <h3 class="news-title mb-4 text-center">You May Also Like</h3>
                        <div class="row">
                            @foreach (var post in Model.RelatedPosts)
                            {
                                <div class="col-lg-4 col-md-4 col-sm-6">
                                    <div class="post-block-wrapper mb-4 mb-lg-0">
                                        <a asp-action="Details" asp-controller="Posts" asp-route-id="@post.PostId">
                                            <img class="img-fluid" id="related-posts-img" src="@post.ImageBase64" alt="post-thumbnail" />
                                        </a>
                                        <div class="post-content mt-3">
                                            <h5>
                                                <a asp-action="Details" asp-controller="Posts" asp-route-id="@post.PostId">@post.Title</a>
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <div class="comment-area my-5">
                    <h3 class="mb-4 text-center">@Model.Comments.Count Comments</h3>
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="comment-area-box media mt-4">
                            <img alt="" src="@comment.User.ProfilePictureBase64" class="img-fluid mr-3 mt-2 float-left" style="width: 50px; height: 50px; border-radius: 50%;">

                            <div class="media-body ml-4">
                                <h4 class="mb-0">@comment.User.Username</h4>
                                <span class="date-comm font-sm text-capitalize text-color">
                                    <i class="ti-time mr-2"></i> @comment.CreatedAt
                                </span>

                                <div class="comment-content mt-3">
                                    <p>@comment.CommentText</p>
                                </div>
                                <div class="comment-meta mt-4 mt-lg-0 mt-md-0">
                                    <a href="#" class="text-underline">Reply</a>
                                </div>
                            </div>
                        </div>
                    }
                    
                </div>

                <form class="comment-form mb-5 gray-bg p-5" id="comment-form">
                    <h3 class="mb-4 text-center">Leave a comment</h3>
                    <div class="row">
                        <div class="col-lg-12">
                            <textarea class="form-control mb-3" name="comment" id="comment" cols="30" rows="5"
                                      placeholder="Comment"></textarea>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input class="form-control" type="text" name="name" id="name" placeholder="Name:">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input class="form-control" type="text" name="mail" id="mail" placeholder="Email:">
                            </div>
                        </div>
                    </div>

                    <input class="btn btn-primary" type="submit" name="submit-contact" id="submit_contact"
                           value="Submit Message">
                </form>

            </div>

        </div>
    </div>
    </div>
</section>


<script>
    document.getElementById("editPostImage").addEventListener("change", function (event) {
        let reader = new FileReader();
        reader.onload = function () {
            let previewImg = document.getElementById("editPreviewImg");
            previewImg.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    });
</script>
