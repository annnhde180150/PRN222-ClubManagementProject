@model IEnumerable<BussinessObjects.Models.JoinRequest>
@{
    ViewData["Title"] = "Join Requests";
}

<section class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="mb-4 text-center">Join Requests</h2>
        <div class="table-responsive">
            <table class="table table-hover text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.User.Username)</th>
                        <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.User.Username)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Approve</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Reject</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
