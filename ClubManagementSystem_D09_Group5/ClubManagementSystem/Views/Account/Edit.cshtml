@model BussinessObjects.Models.User 
@{
    ViewData["Title"] = "Edit Profile";
}
<link rel="stylesheet" href="~/css/edit-profile.css">

<section class="pt-5 padding-bottom">
    <div class="edit-profilecontainer">
        <div style="margin-top: 2%; margin-right: 17%;">
            <hr class="mt-0 mb-4">
            <div class="row custom-margin-row">
                <div class="col-xl-4">
                    <!-- Profile Picture Card -->
                    <div class="card mb-4 mb-xl-0">
                        <div class="card-header">Profile Picture</div>
                        <div class="card-body text-center">
                            <!-- Profile picture display -->
                            <img class="img-account-profile rounded-circle mb-2"
                                 src="@(Model.ProfilePicture != null ?
                                    $"data:image/png;base64,{Convert.ToBase64String(Model.ProfilePicture)}" :
                                    "http://bootdey.com/img/Content/avatar/avatar1.png")"
                                 alt="Profile Picture">
                            <div class="small font-italic text-muted mb-4">JPG or PNG, max 5MB</div>

                            <!-- Profile picture upload -->
                            <form asp-action="UploadProfilePicture" method="post" enctype="multipart/form-data">
                                <button class="btn btn-primary" type="button">
                                    <label class="fileImage">
                                        <input type="file" name="profilePicture" class="form-control-file mb-2" id="fileImage" />
                                        Upload New Image
                                    </label>
                                </button>
                                <input type="submit" value="Upload" class="btn btn-primary" />
                            </form>

                        </div>
                    </div>
                </div>

                <div class="col-xl-8">
                    <!-- Account Details Card -->
                    <div class="card mb-4">
                        <div class="card-header">@Model.Username's Details</div>
                        <div class="card-body">
                            <form asp-action="Edit" method="post">
                                <input type="hidden" asp-for="UserId" />

                                <!-- Username-->
                                <div class="mb-3">
                                    <label asp-for="Username" class="small mb-1"></label>
                                    <input asp-for="Username" class="form-control"  />
                                </div>

                                <!-- Password Fields -->
                                <div class="mb-3">
                                    <label class="small mb-1">New Password</label>
                                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter new password"/>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="small mb-1">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm new password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                @* @if (TempData["errorPass"] != null) *@
                                @* { *@
                                @*     <h5 style="color:red">@TempData["errorPass"]</h5> *@
                                @* } *@
                                @* @if (TempData["errorPassLength"] != null) *@
                                @* { *@
                                @*     <h5 style="color:red">@TempData["errorPassLength"]</h5> *@
                                @* } *@
                                @* @if (TempData["errorConfirmPass"] != null) *@
                                @* { *@
                                @*     <h5 style="color:red">@TempData["errorConfirmPass"]</h5> *@
                                @* } *@

                                <!-- Email (Required) -->
                                <div class="mb-3">
                                    <label asp-for="Email" class="small mb-1"></label>
                                    <input asp-for="Email" class="form-control" type="email" readonly />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <!-- Save Changes Button -->
                                <div class="form-group mt-4">
                                    <input type="submit" value="Save changes" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
